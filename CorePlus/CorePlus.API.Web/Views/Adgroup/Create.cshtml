@model CorePlus.Entity.AdgroupInfoEntity
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function afterAdd(data) {
        //关闭对话框，刷新表格
        //        if (data == "ok") {
        //            window.parent.window.afterAdd();
        //        } else {
        //            $.messager.alert("错误信息", data);
        //        }
        window.parent.window.afterAdd();
    }

    function submitFrm() {
        $("form").submit();
    }
</script>
@using (Ajax.BeginForm("Create", new AjaxOptions() { OnSuccess = "afterAdd" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.AccountName)
    @Html.HiddenFor(model => model.Status)
   
    <br />
    <table width="90%" border="0" cellpadding="5" cellspacing="5" style="margin-left: 5px;">
        <tr>
            <td>
                @Html.LabelFor(model => model.CampaignId)
            </td>
            <td>
                @Html.DropDownListFor(model => model.CampaignId,
                CorePlus.API.Web.ConstWebHelper.Campaign,
                new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
                @Html.ValidationMessageFor(model => model.CampaignId)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Name)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name,
                new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.MaxPrice)
            </td>
            <td>
                @Html.TextBoxFor(model => model.MaxPrice,
                new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
                @Html.ValidationMessageFor(model => model.MaxPrice)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.NegativeWords)
            </td>
            <td>
                @Html.TextAreaFor(model => model.NegativeWords,
                new Dictionary<string, object> { { "style", "width:300px; height:50px;" } })
                @Html.ValidationMessageFor(model => model.NegativeWords)
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(model => model.ExactNegativeWords)
            </td>
            <td>
                @Html.TextAreaFor(model => model.ExactNegativeWords,
                new Dictionary<string, object> { { "style", "width:300px; height:50px;" } })
                @Html.ValidationMessageFor(model => model.ExactNegativeWords)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Pause)
            </td>
            <td>
                @Html.DropDownListFor(model => model.Pause,
                CorePlus.API.Web.ConstWebHelper.Pause,
                new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
            </td>
        </tr>
    </table>
}