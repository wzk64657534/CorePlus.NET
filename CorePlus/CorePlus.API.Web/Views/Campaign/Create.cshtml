@model CorePlus.Entity.CampaignInfoEntity
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function afterAdd(data) {
        //关闭对话框，刷新表格
        //        if (data == "ok") {
        //            window.parent.window.afterAdd();
        //        } else {
        //            $.messager.alert("错误信息", data);
        //        }
        window.parent.window.afterAdd();
    }

    function submitFrm() {
        $("form").submit();
    }
</script>
@using (Ajax.BeginForm("Create", new AjaxOptions() { OnSuccess = "afterAdd" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.AccountName)
    @Html.HiddenFor(model => model.Status)
    @Html.HiddenFor(model => model.JoinContent)
    @Html.HiddenFor(model => model.ContentPrice)
    @Html.HiddenFor(model => model.BudgetOfflineTime)
    @Html.HiddenFor(model => model.Schedule)
    <br />
    <table width="90%" border="0" cellpadding="5" cellspacing="5" style="margin-left: 5px;">
        <tr>
            <td>
                @Html.LabelFor(model => model.Name)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Name, 
                new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
                <span style="color: red;">*</span>
                @Html.ValidationMessageFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Budget)
            </td>
            <td>
                @Html.TextBoxFor(model => model.Budget, new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
                <span style="color: red;">*</span>
                @Html.ValidationMessageFor(model => model.Budget)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.RegionTarget)
            </td>
            <td>
                @Html.ListBoxFor(model => model.RegionList,
                CorePlus.API.Web.ConstWebHelper.RegionTarget,
                new Dictionary<string, object> { { "style", "width:300px; height:100px;" } })
                @Html.ValidationMessageFor(model => model.RegionList)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.ExcludeIp)
            </td>
            <td>
                @Html.TextAreaFor(model => model.ExcludeIp, new Dictionary<string, object> { { "style", "width:300px; height:50px;" } })
                @Html.ValidationMessageFor(model => model.ExcludeIp)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.NegativeWords)
            </td>
            <td>
                @Html.TextAreaFor(model => model.NegativeWords, new Dictionary<string, object> { { "style", "width:300px; height:50px;" } })
                @Html.ValidationMessageFor(model => model.NegativeWords)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.ExactNegativeWords)
            </td>
            <td>
                @Html.TextAreaFor(model => model.ExactNegativeWords, new Dictionary<string, object> { { "style", "width:300px; height:50px;" } })
                @Html.ValidationMessageFor(model => model.ExactNegativeWords)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.ShowProb)
            </td>
            <td>
                @Html.DropDownListFor(model => model.ShowProb,
                CorePlus.API.Web.ConstWebHelper.ShowProb,
                new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(model => model.Pause)
            </td>
            <td>
                @Html.DropDownListFor(model => model.Pause,
                CorePlus.API.Web.ConstWebHelper.Pause,
                new Dictionary<string, object> { { "style", "width:300px; height:20px;" } })
            </td>
        </tr>
    </table>
}