@{
    ViewBag.Title = "泛亚统计";
}
<div class="aside">
    <ul class="nav">
        @if (ViewBag.SideMenu != null)
        {
            foreach (var menu in ViewBag.SideMenu)
            {
            <li><a class="recordable close" href="#">
                @menu.MenuName</a>
                <ul style="display: none">
                    @if (ViewBag.ChileMenu != null)
                    {
                        foreach (var childMenu in ViewBag.ChileMenu)
                        {
                            if ((int)menu.ID == childMenu.ParentMenuID)
                            {
                        <li>
                            @Html.ActionLink((string)childMenu.MenuName, (string)childMenu.Action, (string)childMenu.Controller, null, new { target = "ifrmVisit" })
                        </li>
                            }

                        }
                    }
                </ul>
            </li>
            }
        }
    </ul>
</div>
<div class="misc">
</div>
<div class="main">
    <iframe id="ifrmVisit" name="ifrmVisit" frameborder="0" marginheight="0" marginwidth="0"
        width="100%" scrolling="no" height="700"></iframe>
</div>
<script src="@Url.Content("~/Scripts/customer/tangram.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/customer/common.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/customer/dc.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/customer/tabs.js")" type="text/javascript"></script>