@{
    ViewBag.Title = "主页";

}
<div id="Top" class="header-wrapper">
    <div class="header">
        <div class="logo">
            <a href="/Home/Index">
                <img alt="CorePlus" src="../../Content/customer/images/logo.png" />
            </a>
        </div>
        <div class="top-nav">
            @Html.Partial("_LogOnPartial")
        </div>
        <div class="view-tab">
            <ul id="tabs">
                @if (ViewBag.Menu != null)
                {
                    foreach (var menu in ViewBag.Menu)
                    {
                    <li>
                        @Html.ActionLink((string)menu.MenuName, (string)menu.Action, (string)menu.Controller, new { id = menu.ID }, new { target = "ifmMain" })
                    </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
<div class="body clearfix">
    <iframe id="ifmMain" name="ifmMain" frameborder="0" marginheight="0" marginwidth="0"
        width="100%" height="590" scrolling="no"></iframe>
</div>
<script src="@Url.Content("~/Scripts/customer/tabs.js")" type="text/javascript"></script>
